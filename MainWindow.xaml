<Window x:Class="Comp4980BioProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Comp4980BioProject"
        mc:Ignorable="d"
        Title="MainWindow" Height="1080" Width="1920">
    <Grid>
        <Grid.ColumnDefinitions>

            <ColumnDefinition Width="Auto"/>

            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <FlowDocumentScrollViewer x:Name="flowDoc" Grid.Column="1"                            
                                  HorizontalScrollBarVisibility="Hidden" Height="900" VerticalAlignment="Top" HorizontalAlignment="Left" HorizontalContentAlignment="Left" Width="500" VerticalScrollBarVisibility="Hidden"
      >


            <FlowDocument >
                <Table Name="table1" CellSpacing="0">
                    <TableRowGroup>
                        <TableRow>
                            <TableCell TextAlignment="Center" ColumnSpan="1" LineHeight="300" Background="#FFE04545">
                                <Paragraph>1</Paragraph>
                            </TableCell>
                            <TableCell>
                                <Paragraph>1</Paragraph>
                            </TableCell>
                        </TableRow>
                        <TableRow>
                            <TableCell TextAlignment="Center" ColumnSpan="1" LineHeight="10">
                                <Paragraph>1</Paragraph>
                            </TableCell>
                            <TableCell>
                                <Paragraph>1</Paragraph>
                            </TableCell>
                        </TableRow>
                    </TableRowGroup>
                </Table>
            </FlowDocument>
        </FlowDocumentScrollViewer>
        <Rectangle Fill="#FFF4F4F5"  Height="165"  Stroke="Black" VerticalAlignment="Top"   Grid.Column="0" Margin="10,443,20,0" />
        <TextBox x:Name="seq1TextBox" HorizontalAlignment="Left" Height="162" Margin="10,55,0,0" TextWrapping="Wrap" Text="ACTCG" VerticalAlignment="Top" Width="407"/>
        <TextBox x:Name="seq2TextBox" HorizontalAlignment="Left" Height="162" Margin="10,261,0,0" TextWrapping="Wrap" Text="ACAGTAG" VerticalAlignment="Top" Width="407"/>
        <Label Content="Sequence 1" HorizontalAlignment="Left" Margin="10,11,0,0" VerticalAlignment="Top" Width="412" Height="44" FontSize="20"/>
        <Label Content="Sequence 2" HorizontalAlignment="Left" Margin="10,217,0,0" VerticalAlignment="Top" Width="417" Height="44" FontSize="20"/>
        <Button x:Name="startButton" Content="Start" HorizontalAlignment="Left" Margin="10,942,0,0" VerticalAlignment="Top" Width="417" Height="97" FontSize="24" Click="startButton_Click"/>
        <Label Content="linear gap Penalty" HorizontalAlignment="Left" Margin="20,494,0,0" VerticalAlignment="Top" Width="114" Height="44"/>
        <TextBox HorizontalAlignment="Left" Height="22" Margin="126,498,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="82"/>
        <Label Content="Matrix Number" HorizontalAlignment="Left" Margin="20,528,0,0" VerticalAlignment="Top" Width="114" Height="44"/>
        <TextBox HorizontalAlignment="Left" Height="22" Margin="126,532,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="82"/>
        
        <RadioButton GroupName="matrix" IsChecked="True" Content="PAM" HorizontalAlignment="Left" Margin="26,560,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.349,0.378"/>
        <RadioButton GroupName="matrix" Content="BLOSUM" HorizontalAlignment="Left" Margin="79,560,0,0" VerticalAlignment="Top" />
        
        <RadioButton GroupName="alignment" x:Name="globalAlignmentRB" IsChecked="True" Content="Global" HorizontalAlignment="Left" Margin="86,479,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.349,0.378"/>
        <RadioButton GroupName="alignment" x:Name="localAlignmentRB" Content="Local" HorizontalAlignment="Left" Margin="159,479,0,0" VerticalAlignment="Top" />
        
        <Label Content="Alignment:" HorizontalAlignment="Left" Margin="16,472,0,0" VerticalAlignment="Top"/>




    </Grid>

</Window>
